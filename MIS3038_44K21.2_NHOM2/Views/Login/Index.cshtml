@using WebBookStore.Models;
@model Login

@{
    Layout = "~/Views/Layout/LogRegLayout.cshtml";
}

<div class="form-login">
    <div class="form-header row">
        <h3>Đăng nhập</h3>
        <a class="switch-link" href="@Url.Action("Register", "User")">
            Đăng ký
        </a>
    </div>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <p>Tên đăng nhập</p>
            @Html.TextBoxFor(model => model.UserName, new { @class = "form__input" })

        </div>

        <div class="form-group">
            <p>Mật khẩu</p>
            @Html.PasswordFor(model => model.Password, new { @class = "form__input", @type = "password" })

        </div>
        @Html.ValidationSummary(false, "", new { @class = "wrong-input" })
        <div>
            <p class="forgot-pass">
                @Html.ActionLink("Quên mật khẩu?", "ForgotPassword", "User")
            </p>
        </div>
        <button class="btn ctrl--add-to-cart">Đăng nhập</button>
    }


</div>
