@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link href="~/Asset/style/reset.css" rel="stylesheet" />
    <!-- SLICK SLIDER -->
    <!-- Add the slick-theme.css if you want default styling -->
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <!-- Add the slick-theme.css if you want default styling -->
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
    <!-- STYLES -->
    <link href="~/Asset/style/style.css" rel="stylesheet" />
</head>
<body>
    <section class="login-register">
        <div class="form-container row--base">
            <div class="form-login">
                <div class="form-header row">
                    <h3>Quên mật khẩu</h3>
                </div>
                @using (Html.BeginForm())
                {
                    <div class="text-success">
                        <p class="wrong-input">@ViewBag.Message</p>
                    </div>
                    <div class="form-group">
                        <p>Email </p>
                        @Html.TextBox("Email", "", new { @class = "form__input", @placeholder = "Examp@gmail.com" })
                    </div>
                    <div class="form-group" style="text-align: center">
                        <input style="margin-right: 0; width: 100%" type="submit" value="Xác nhận" class="btn btn-secondary" />
                        <a style="display: block; font-size: 1.6rem; color: #1B8BCC; margin-top: 2rem" href="@Url.Action("Index", "Login")">Trở về đăng nhập</a>
                    </div>

                }
            </div>
        </div>
    </section>
</body>
