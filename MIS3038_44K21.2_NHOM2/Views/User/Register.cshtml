@using WebBookStore.Models;
@model Register
@{
    Layout = "~/Views/Layout/LogRegLayout.cshtml";
}

<div class="form-login">

    <div class="form-header row">
        <h3>Đăng ký</h3>
        <a class="switch-link" href="@Url.Action("Index", "Login")">
            Đăng nhập
        </a>
    </div>

    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "wrong-input" })
        <div class="form-group">
            <br />
            <p>Tên Đăng Nhập</p>
            @Html.TextBoxFor(model => model.UserName, new { @class = "form__input" })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "wrong-input" })
        </div>
        <div class="form-group">
            <p>Họ tên</p>
            @Html.TextBoxFor(model => model.Name, new { @class = "form__input" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "wrong-input" })
        </div>
        <div class="form-group">
            <p>Mật khẩu</p>
            @Html.PasswordFor(model => model.Password, new { @class = "form__input" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "wrong-input" })
        </div>

        <div class="form-group">
            <p>Xác nhận lại mật khẩu</p>
            @Html.PasswordFor(model => model.ConfirmPass, new { @class = "form__input" })
            @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "wrong-input" })
        </div>

        <div class="form-group">
            <p>Email</p>
            @Html.TextBoxFor(model => model.Email, new { @class = "form__input" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "wrong-input" })
            @Html.ValidationMessage("Email đã tồn tại", new { @class = "wrong-input" })
        </div>
        <button class="btn ctrl--add-to-cart" type="submit">Đăng ký</button>

        if (@ViewBag.Status == true)
        {
            <div class="form-group">
                <div class="success-icon">
                    <i class="fa fa-check"></i>
                </div>
                <p>Bạn đã đăng ký thành công!</p>             
            </div>

        }
    }
</div>

