    <!-- ADMIN -->
    <section class="admin">
        <div class="sidebar">
            <a href="@Url.Action("Index", "HomePage")" style="display: inline-block; padding-top: 4rem">
                <img src="~/Asset/img/logo-white.png" />
            </a>
            <ul class="sidebar__list">
                <div data-tab="book" class="sidebar__item active row">
                    <div class="border-top">
                        <div class="border-top-box"></div>
                    </div>

                    <div class="sidebar__item-content row">
                        <i class="fas fa-th-large"></i>
                        <p>Dashboard</p>
                    </div>

                    <div class="border-bottom">
                        <div class="border-bottom-box"></div>

                    </div>
                </div>
                <div data-tab="order" class="sidebar__item row">
                    <div class="border-top">
                        <div class="border-top-box"></div>
                    </div>

                    <div class="sidebar__item-content row">
                        <i class="fa fa-shopping-cart"></i>
                        <p>Order</p>
                    </div>


                    <div class="border-bottom">
                        <div class="border-bottom-box"></div>
                    </div>
                </div>
                <div data-tab="customer" class="sidebar__item row">
                    <div class="border-top">
                        <div class="border-top-box"></div>
                    </div>
                    <div class="sidebar__item-content row">
                        <i class="fa fa-user"></i>
                        <p>Customer</p>
                    </div>
                    <div class="border-bottom">
                        <div class="border-bottom-box"></div>
                    </div>
                </div>
                
               
            </ul>
            <div class="social row">
                <a href="#">Facebook</a>
                <a href="#">Twitter</a>
                <a href="#">Google</a>
            </div>
        </div>
        <div class="main">
            <div class="main-header row">
                <h2>Book</h2>
                <div class="main-search">
                    <form action="~/Admin/HomePage/resultSomething" method="get">
                        <div class="main-search-content">
                            <i class="fa fa-search"></i>
                            <input placeholder="Type something..." name="searchsomething" type="text">
                        </div>
                    </form>
                </div>
                @*<div class="main-header-user row">
                        <img src="https://ui-avatars.com/api/?name=Admin" alt="">
                        <i class="fa fa-caret-down"></i>
                    </div>*@
                <div class="login-status">
                    @Html.Action("PartialLoginAdmin", "AdminLogin")
                </div>
            </div>
            <!-- TAB-BOOK -->
            <div class="tab active tab-book">
                <p class="create-btn newbook"><i class="fa fa-plus"></i>Thêm sách</p>
                <div class="data__list">
                    @if (Model.listbook == null)
                    {
                        @ViewBag.Result
                    }
                    else
                    {
                        <div class="data__header row">
                            <div class="col-1">ID</div>
                            <div class="col-1">Hình ảnh</div>
                            <div class="col-3">Tên sách</div>
                            <div class="col-2">Tác giả</div>
                            <div class="col-1">Giá</div>
                            <div class="col-1">Số lượng</div>
                            <div class="col-1">Action</div>
                        </div>
                        <div class="data__body">
                            @{
                                foreach (var item in Model.listbook)
                                {
                                    <div class="data__item row">
                                        <div class="col-1">#@item.Id_Book</div>
                                        <div class="col-1">
                                            <img src="@item.Images" alt="">
                                        </div>
                                        <div class="col-3 book-title">@item.Title</div>
                                        <div class="col-2">@item.Author.Name</div>
                                        <div class="col-1"><span class="price-number">@item.Price</span> VND</div>
                                        <div class="col-1">@item.Quantity</div>
                                        <div class="col-1">
                                            <a href="@Url.Action("Update", "ManageBook", new {  @Id_Book = item.Id_Book })">
                                                <button class="admin-edit-book edit"><i class="fa fa-edit"></i></button>
                                            </a>
                                            <a href="@Url.Action("Remove", "ManageBook", new { @Id_Book = item.Id_Book })">
                                                <button class="remove"><i class="fa fa-trash"></i></button>
                                            </a>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    }
                </div>
            </div>
            <!-- TAB-CUSTOMER -->
            <div class="tab tab-customer">
                <p class="create-btn newcustomer">@*<i class="fa fa-plus"></i> New Customer*@</p>
                <div class="data__list">
                    @if (Model.listaccount == null)
                    {
                        @ViewBag.Result
                    }
                    else
                    {
                        <div class="data__header row">
                            <div class="col-1">ID</div>
                            <div class="col-2">Tên người dùng</div>
                            <div class="col-3-2">User Name</div>
                            <div class="col-3-2">Số điện thoại</div>
                            <div class="col-2">Địa chỉ</div>
                            <div class="col-1">Sinh nhật</div>
                        </div>
                        <div class="data__body">
                            @{
                                foreach (var item in Model.listaccount)
                                {
                                    string Phone = "";
                                    string Address = "";
                                    string DateOfBirth = "";
                                    if (item.Phone != null)
                                    {
                                        Phone += item.Phone;
                                    }
                                    if (item.Address != null)
                                    {
                                        Address += item.Address;
                                    }
                                    if (item.DateOfBirth != null)
                                    {
                                        DateOfBirth += item.DateOfBirth;
                                    }

                                    <div class="data__item row">
                                        <div class="col-1">#2021-@item.Id_Customer</div>
                                        <div class="col-2">
                                            <div class="row">
                                                <img class="avatar" src="https://ui-avatars.com/api/?name=@item.Name&background=random" alt="">
                                                @item.Name
                                            </div>
                                        </div>
                                        <div class="col-3-2">@item.UserName</div>
                                        <div class="col-3-2">@Phone</div>
                                        <div class="col-2">@Address</div>
                                        <div class="col-1">@DateOfBirth</div>
                                    </div>
                                }
                            }
                        </div>
                    }
                </div>
            </div>
            <!-- TAB-ORDER -->
            <div class="tab tab-order">
                <p class="create-btn"></p>
                <div class="data__list">
                    @if (Model.listorder == null)
                    {
                        @ViewBag.Result
                    }
                    else
                    {
                        <div class="data__header row">
                            <div class="col-1">ID</div>
                            <div class="col-3-2">Ngày vận chuyển</div>
                            <div class="col-3-2">Ngày hết hạn</div>
                            <div class="col-3-2">Số điện thoại</div>
                            <div class="col-2">Địa chỉ nhận hàng</div>
                            <div class="col-3-2">Trạng thái</div>
                            <div class="col-1">Action</div>
                        </div>
                        <div class="data__body">

                            @{
                                foreach (var item in Model.listorder)
                                {
                                    string classBrand = "brand ";
                                    string deliverydate = "";
                                    string expdeliverydate = "";
                                    if (item.Id_Status == 1)
                                    {
                                        classBrand += "preparing";
                                    }
                                    if (item.Id_Status == 2)
                                    {
                                        classBrand += "processing";
                                    }
                                    if (item.Id_Status == 3)
                                    {
                                        classBrand += "finish";
                                    }
                                    if (item.DeliveryDate == null)
                                    {

                                    }
                                    else
                                    {
                                        deliverydate += item.DeliveryDate.Value.Day.ToString() + "/" + item.DeliveryDate.Value.Month.ToString() + "/" + item.DeliveryDate.Value.Year.ToString();
                                    }
                                    if (item.ExpDeliveryDate == null)
                                    {

                                    }
                                    else
                                    {
                                        expdeliverydate += item.ExpDeliveryDate.Value.Day.ToString() + "/" + item.ExpDeliveryDate.Value.Month.ToString() + "/" + item.ExpDeliveryDate.Value.Year.ToString();
                                    }
                                    <div class="data__item row">
                                        <div class="col-1">#@item.Id_Order</div>
                                        <div class="col-3-2">
                                            <div class="row">
                                                @deliverydate
                                            </div>
                                        </div>
                                        <div class="col-3-2">@expdeliverydate</div>
                                        <div class="col-3-2">@item.PhoneNumber</div>
                                        <div class="col-2">@item.AddressShipping</div>
                                        <div class="col-3-2">
                                            <div class="@classBrand">@item.StatusOrder.StatusDetail.ToString()</div>
                                        </div>
                                        <div class="col-1 row">
                                            <a href="@Url.Action("Edit", "ManageOrder", new { @Id_Order = item.Id_Order })">
                                                <button class="admin-edit-order edit"><i class="fa fa-edit"></i></button>
                                            </a>
                                            <a href="@Url.Action("Delete", "ManageOrder", new { @Id_Order = item.Id_Order })">
                                                <button class="remove"><i class="fa fa-trash"></i></button>
                                            </a>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <script src="~/Asset/js/Modal.js"></script>
    <script src="~/Asset/js/tab-admin.js"></script>
    <script>
        const prices = document.querySelectorAll(".price-number");
        const bookTitles = document.querySelectorAll(".book-title");
        prices.forEach(price => {
            price.innerHTML = Number(price.innerHTML).toLocaleString("en-US");
        })
        bookTitles.forEach(bookTitle => {
            bookTitle.innerHTML = bookTitle.innerHTML.length > 45 ? bookTitle.innerHTML.substring(0, 45) + "..." : bookTitle.innerHTML;
        })
    </script>
